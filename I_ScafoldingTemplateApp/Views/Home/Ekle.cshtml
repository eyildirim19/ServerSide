@model I_ScafoldingTemplateApp.Models.Ogrenci

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ekle</title>
</head>
<body>

    @*
        jquery.validate.js dosyaları requeired attributelü propertylerimizi validate eder...
    *@

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @*
        Eğer bu şekilde dğeilde
        @using (Html.BeginForm("Ekle", "Home")) <form action=/Home/Ekle>

        bu şekilde kullanırsanız view adınızda action'a request atacaktır...

        @using (Html.BeginForm()) <form action="/Home/Ekle">

    *@

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() <!-- Serverdan atılan tokenı tutar. buradaki değer actiondaki ValidateAntiForgeryToken ile kontrol edilir...güvenlik için eklenir..-->
        @*<input type="text" name="name" value="" autocomplete="off" />*@


        <div class="form-horizontal">
            <h4>Ogrenci</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Adi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Adi, new { htmlAttributes = new { @class = "form-control",autocomplete="off" } })
                    @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoyAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoyAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoyAdi, "", new { @class = "text-danger" }) <!--property'deki Requeired attributesinin ErrorMessage parametresindeki değeri gössterir...-->
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
